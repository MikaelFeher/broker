= form_for @product :html => { :multipart => true } do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg
  
  .field
    = f.label :title, 'Titel'
    = f.text_field :title
  .field
    = f.label :price, 'Utropspris'
    = f.number_field :price
  .field
    = f.label :address, 'Adress'
    = f.text_field :address
  .field
    = f.label :category_id,'Ort'
    = select_tag (:category_id, options_for_select(@categories), prompt: 'Välj ort')
  / .field
  /   = f.label :city, 'Ort'
  /   = f.text_field :city
  .field
    = f.label :rooms, 'Rum'
    = f.number_field :rooms
  .field
    = f.label :living_space, 'Boyta'
    = f.number_field :living_space
  .field
    = f.label :property_size, 'Tomtarea'
    = f.number_field :property_size
  .field
    = f.label :description, 'Översikt'
    = f.text_area :description
  .field
    = f.label :build_year, 'Byggår'
    = f.number_field :build_year
  .field
    = f.label :ownership_form, 'Upplåtelseform'
    = f.text_field :ownership_form
  .field
    = f.label :upkeep, 'Driftskostnad'
    = f.number_field :upkeep
  .actions
    = f.submit 'Save'
