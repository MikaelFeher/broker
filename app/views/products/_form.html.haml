= form_for @product do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :price
    = f.number_field :price
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :rooms
    = f.number_field :rooms
  .field
    = f.label :living_space
    = f.number_field :living_space
  .field
    = f.label :property_size
    = f.number_field :property_size
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :build_year
    = f.number_field :build_year
  .field
    = f.label :ownership_form
    = f.text_field :ownership_form
  .field
    = f.label :upkeep
    = f.number_field :upkeep
  .actions
    = f.submit 'Save'
